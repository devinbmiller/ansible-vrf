vrf definition {{ vrf_name }}
 !
 address-family ipv4
 exit-address-family
!
!
!
{% if dual_routers == True %}
!
interface {{ intra_router_interface }}.{{ vrf_vlan }}
 !
 description {{ vrf_name }} INTRA-ROUTER L3 TRANSPORT TO {{ peer_router }}
 encapsulation dot1Q {{ vrf_vlan }}
 vrf forwarding {{ vrf_name }}
 ip address {{ intra_router_ip }} {{ intra_router_mask }}
!
!
interface {{ router_lan_interface }}.{{ vrf_vlan }}
 description L3 LAN INTERFACE {{ vrf_name }}
 encapsulation dot1Q {{ vrf_vlan }}
 vrf forwarding {{ vrf_name }}
 ip address {{ vrf_router_ip }} {{ vrf_router_mask }}
 ip helper-address 10.200.112.125
 ip helper-address 10.200.123.26
 ip helper-address 10.3.112.126
 ip pim sparse-mode
 glbp {{ fhrp_group }} ip {{ fhrp_gw_ip }}
 glbp {{ fhrp_group }} timers 1 3
!
{% endif %}
!
!
router ospf {{vrf_vlan}} vrf {{ vrf_name }}
 router-id {{ vrf_router_ip }} 
 auto-cost reference-bandwidth 100000
 capability vrf-lite
 network {{ ospf_network }} {{ ospf_wildcard_mask }} area {{ vrf_ospf_area }}
!
!
